<div class="row admin-container">
  <div class="columns small-12 admin-page-title">
    <h1>User Submitted Content</h1>
    <div class="universal-flex-container universal-flex-natural admin-button-container">
      <%= link_to new_user_submitted_collection_path, class: "admin-button admin-new universal-flex-button flex-button-natural" do %>
        <i class="fa fa-plus"></i> Create
      <% end %>
    </div>
  </div>
  <div class="columns small-12">
    <ul>
    <% @collections.each do |collection| %>
      <li>
        <h3><%= link_to collection.name, user_submitted_collection_path(collection) %></h3>
        <ul>
        <li><%= link_to "Pending:  #{collection.contents.pending.count}", user_submitted_collection_path(collection, status: "pending") %></li>
        <li><%= link_to "Approved: #{collection.contents.approved.count}", user_submitted_collection_path(collection, status: "approved") %></li>
        <li><%= link_to "Rejected: #{collection.contents.rejected.count}", user_submitted_collection_path(collection, status: "rejected")  %></li>
        </ul>
      </li>
    <% end %>
    <ul>
  </div>
</div>
