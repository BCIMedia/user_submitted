<div class="row admin-container">
  <div class="columns small-12 admin-page-title">
    <div class="content-container" id="content-<%= @content.id %>">
      <h2 class="subhead"><%= link_to @content.collection.name, user_submitted_collection_path(@content.collection) %></h2>
      <div class="content-card">
        <div class="columns small-12">
          <%= render partial: "user_submitted/contents/display", locals: { content: @content, size: "100%", style: :large } %>
        </div>
        <div class="columns small-12">
          <strong>Caption:</strong> <%= simple_format(@content.caption) %>
        </div>
        <div class="columns small-12">
          <strong>Credit:</strong> <%= @content.credit %>
        </div>
        <div class="columns small-12">
          <strong>Email:</strong> <%= @content.email %>
        </div>
        <div class="columns small-12">
          <strong>Created:</strong> <%= @content.created_at.strftime("%l:%M%P %A, %B %e, %Y") %>
        </div>
      </div>
    </div>
  </div>

  <div class="columns small-12 universal-flex-container universal-flex-natural">
    <%= link_to user_submitted_collection_path(@content.collection), class: "admin-back universal-flex-button flex-button-natural" do %>
      <i class="fas fa-arrow-left"></i> Back
    <% end %>
    <%= link_to edit_user_submitted_collection_content_path(@content.collection, @content), class: "admin-back universal-flex-button flex-button-natural" do %>
      Edit
    <% end %>
  </div>
</div>
