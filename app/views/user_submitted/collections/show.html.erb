<div class="row admin-container">
  <div class="columns small-12 admin-page-title">
    <h1>User Submitted Collection</h1>
    <h2><%= @collection.name %></h2>
    <div>
      <strong>Identifier:</strong> <%= @collection.identifier %>
    </div>
    <div>
      <strong>Description:</strong> <%= @collection.description %>
    </div>
  </div>
  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to edit_user_submitted_collection_path(@collection), class: "admin-button admin-new universal-flex-button flex-button-natural" do %>
      <i class="fa fa-plus"></i> Edit
    <% end %>
  </div>

  <hr>

  <div class="columns small-12">
    <h4>Contents</h4>
  </div>
  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to new_user_submitted_collection_content_path(collection_id: @collection.id), class: "admin-button admin-new universal-flex-button flex-button-natural" do %>
      <i class="fa fa-plus"></i> Create
    <% end %>
  </div>
  <%= render partial: "legend" %>
  <div class="columns small-12">
    <% contents = @status ? @collection.contents.send(@status) : @collection.contents %>
    <%= render partial: "user_submitted/contents/table", locals: {contents: contents} %>
  </div>
</div>
